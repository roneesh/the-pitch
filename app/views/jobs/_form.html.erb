<%= form_for @job do |j| %>
  <%= j.label :title%>
  <%= j.text_field :title%>
  
  <%= j.label :description%>
  <%= j.text_field :description%>
  
  <%= j.label :employer_id %>
  <%= j.collection_select :employer_id, Employer.all, :id, :name %>
  
  <%= j.submit "Let's make some magic!"%>
<% end %>