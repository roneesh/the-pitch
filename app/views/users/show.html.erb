<div class="container-fluid">
  <div class="row-fluid title">
    <div class="span4">
      <p><strong>Welcome, </strong>
        <%= @user.first_name.capitalize %>  
      </p>
    </div>
    <div class="span4">
      <p><strong>Email:</strong>
        <%= @user.email%>   
      </p>
    </div>
    <div class="span4">
      <p><strong><%= link_to "Edit User Information", edit_user_url(@user.id) %></strong></p>
    </div>
  </div>

  <div class="row-fluid">
    <div class="span8 offset2">
        <div class="info">
         <th><h1>Existing Pitches</h1></th>
          <table class="table table-hover">
           
          <% @user.pitches.each do |pitch_object| %>
          <tr>
    		    <td><%= link_to pitch_object.headline, pitch_url(pitch_object.id) %></td>
    			   <td><%= link_to "Edit", edit_pitch_url(pitch_object.id) %></td>
    			   <td><%= link_to "Delete", pitch_url(pitch_object.id), html_options = {method: 'delete', confirm: "Are you sure? Deleted Pitches can not be retrieved."} %></td>
          </tr>
          <%end%>
          
          </table>
        </div>
    </div>
  </div>
</div>




