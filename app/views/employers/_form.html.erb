<%= form_for @employer do |e| %>

<%= e.label :name %>
<%= e.text_field :name %>

<%= e.label :email %>
<%= e.text_field :email %>

<%= e.label :description %>
<%= e.text_field :description %>

<%= e.label :password %>
<%= e.password_field :password%>

<%= e.label :password_confirmation %>
<%= e.password_field :password_confirmation%>


<%= e.submit "Submit"%>

<% end %>